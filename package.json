{
  "name": "example",
  "license": "MIT",
  "scripts": {
    "clean": "hardhat clean && rimraf cache build contracts/build",
    "clear": "yarn run clean && && rimraf node_modules",
    "lint": "yarn run lint:ts && yarn run lint:sol",
    "lint:fix": "yarn run lint:ts:fix && yarn run lint:sol:fix",
    "lint:ts": "eslint --ignore-path .gitignore .",
    "lint:ts:fix": "eslint --ignore-path .gitignore . --fix",
    "lint:sol": "solhint 'contracts/**/*.sol' && prettier -c .",
    "lint:sol:fix": "prettier --write .",
    "coverage": "env COVERAGE=true hardhat coverage",
    "test": "hardhat test",
    "gas-report": "env REPORT_GAS=true yarn run test",
    "compile": "hardhat compile",
    "prepare": "yarn run clean && env COMPILE_MODE=production yarn run compile",
    "sign-deploy": "hardhat run --network rinkeby scripts/sign/deploy.ts",
    "sign-verify": "hardhat verify-sign-on-explorer --network rinkeby",
    "verify-deploy": "hardhat run --network amoy scripts/verify/deploy.ts",
    "verify-verify": "hardhat verify-on-explorer --network ropsten",
    "verify-deploy-mumbai": "hardhat run --network mumbai scripts/verify/deploy.ts",
    "verify-verify-mumbai": "hardhat verify-on-explorer --network mumbai",
    "upgradable-erc721-deploy-v1": "hardhat run --network ropsten scripts/upgradable/v1/deploy.ts",
    "upgradable-erc721-verify-v1": "hardhat verify-on-explorer-v1 --network ropsten",
    "upgradable-erc721-deploy-v2": "hardhat run --network ropsten scripts/upgradable/v2/deploy.ts",
    "upgradable-erc721-verify_-v2": "hardhat verify-on-explorer-v2 --network ropsten"
  },
  "devDependencies": {
    "@metamask/eth-sig-util": "^4.0.1",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@openzeppelin/contracts": "^4.6.0",
    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "@openzeppelin/hardhat-upgrades": "^1.18.0",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^12.20.46",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.6",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.0",
    "ethereumjs-util": "^7.1.5",
    "ethers": "^5.5.4",
    "hardhat": "^2.22.2",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.20",
    "ts-node": "^10.5.0",
    "typechain": "^5.2.0",
    "typescript": "^4.6.2",
    "web3": "^1.7.4"
  },
  "dependencies": {
    "@fireblocks/hardhat-fireblocks": "^1.3.5"
  }
}
